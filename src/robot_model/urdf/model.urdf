<?xml version="1.0"?>
<robot name="myfirst">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>


  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <gazebo reference="base_link">
  <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="right_wheel">
  <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="left_wheel">
  <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="sphere">
  <material>Gazebo/White</material>
  </gazebo>

  <gazebo reference="lidar">
  <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="base_link">
  <material>Gazebo/Blue</material>
  </gazebo>

  <link name="base_link">
    <visual>
    <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <geometry>
         <box size="0.4 0.2 0.1"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
     <origin xyz="0 0 0.03" rpy="0 0 0"/>
     <geometry>
      <box size="0.4 0.2 0.1"/>
     </geometry>
    </collision>
    <inertial>
     <mass value="0.5"/>
     <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>
  
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.06"/>
      </geometry>
       <material name="red"/>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
    </visual>
     <collision>
     <origin xyz="0 0 0" rpy="1.57 0 0"/>
     <geometry>
        <cylinder length="0.05" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
     <mass value="0.5"/>
     <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>
  
  <joint name="base_right_wheel_joint" type="continuous">
  <parent link="base_link"/>
  <child link="right_wheel"/>
  <origin xyz="0.1 0.125 0"/>
  <axis xyz="0 1 0"/>
  </joint>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.06"/>
      </geometry>
       <material name="red"/>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
    </visual>
    <collision>
     <origin xyz="0 0 0" rpy="1.57 0 0"/>
     <geometry>
        <cylinder length="0.05" radius="0.06"/>
      </geometry>
    </collision>
    <inertial>
     <mass value="0.5"/>
     <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>
  
  <joint name="base_left_wheel_joint" type="continuous">
  <parent link="base_link"/>
  <child link="left_wheel"/>
  <origin xyz="0.1 -0.125 0"/>
  <axis xyz="0 1 0"/>
  </joint>

  <link name="sphere">
    <visual>
      <geometry>
        <sphere radius="0.06" length="0.02"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
       <material name="white"/>
    </visual>
    <collision>
     <origin xyz="0 0 0" rpy="0 0 0"/>
     <geometry>
        <sphere radius="0.06" length="0.02"/>
      </geometry>
    </collision>
    <inertial>
     <mass value="0.5"/>
     <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  
  
  <joint name="base_sphere_joint" type="fixed">
  <parent link="base_link"/>
  <child link="sphere"/>
  <origin xyz="-0.1 0 0"/>
  <axis xyz="0 0 0"/>
  </joint>

  <link name="imu_link">
    <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
         <box size="0.03 0.02 0.01"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
     <origin xyz="0 0 0" rpy="0 0 0"/>
     <geometry>
         <box size="0.03 0.02 0.01"/>
      </geometry>
    </collision>
    <inertial>
     <mass value="0.5"/>
     <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <joint name="base_imu_joint" type="fixed">
  <parent link="base_link"/>
  <child link="imu_link"/>
  <origin xyz="-0.05 0 0.105"/>
  <axis xyz="0 0 0"/>
  </joint>

  <link name="lidar">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.05"/>
      </geometry>
       <material name="black"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
     <origin xyz="0 0 0" rpy="0 0 0"/>
     <geometry>
        <cylinder radius="0.05" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
     <mass value="0.5"/>
     <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>
  
  <joint name="base_lidar_joint" type="fixed">
  <parent link="base_link"/>
  <child link="lidar"/>
  <origin xyz="-0.1 0 0.105"/>
  <axis xyz="0 0 0"/>
  </joint>

  <!-- Gazebo Plugin for Differential Drive -->
  <gazebo>
 <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
    <ros>
      <namespace>/</namespace>
      <argument>odom</argument>
    </ros>
    <alwaysOn>true</alwaysOn>
    <updateRate>100</updateRate>
    <leftJoint>base_left_wheel_joint</leftJoint>
    <rightJoint>base_right_wheel_joint</rightJoint>
    <wheelSeparation>0.3</wheelSeparation>
    <wheelDiameter>0.1</wheelDiameter>
    <torque>5.0</torque>
    <commandTopic>cmd_vel</commandTopic>
    <odometryTopic>odom</odometryTopic>
    <odometryFrame>odom</odometryFrame>
    <robotBaseFrame>base_link</robotBaseFrame>
    <publishWheelTF>true</publishWheelTF>
    <publishOdomTF>true</publishOdomTF>
    <publishWheelJointState>true</publishWheelJointState>
    <wheelAcceleration>0.1</wheelAcceleration>
    <wheelTorque>10.0</wheelTorque>
    <odometrySource>0</odometrySource>
    <publishTf>true</publishTf>
  </plugin>
  </gazebo>

  <gazebo reference="lidar">
	<sensor type="gpu_ray" name="head_rplidar_sensor">
		<pose>0 0 0 0 0 0</pose>
		<visualize>true</visualize>
		<update_rate>10</update_rate>
		<ray>
			<scan>
				<horizontal>
					<samples>400</samples>
					<resolution>1</resolution>
					<min_angle>-3.14159</min_angle>
					<max_angle>3.14159</max_angle>
				</horizontal>
			</scan>
			<range>
				<min>0.15</min>
				<max>6.0</max>
				<resolution>0.01</resolution>
			</range>
			<noise>
				<type>gaussian</type>
				<mean>0.0</mean>
				<stddev>0.01</stddev>
			</noise>
		</ray>
		<plugin name="gazebo_ros_head_rplidar_controller" filename="libgazebo_ros_gpu_laser.so">
			<topicName>/scan</topicName>
			<frameName>lidar</frameName>
		</plugin>
	</sensor>
</gazebo>

<gazebo reference="imu_link">
    <gravity>true</gravity>
    <sensor name="imu_sensor" type="imu">
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <topic>__default_topic__</topic>
      <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
        <topicName>imu</topicName>
        <bodyName>imu_link</bodyName>
        <updateRateHZ>10.0</updateRateHZ>
        <gaussianNoise>0.0</gaussianNoise>
        <xyzOffset>0 0 0</xyzOffset>
        <rpyOffset>0 0 0</rpyOffset>
        <frameName>imu_link</frameName>
        <initialOrientationAsReference>false</initialOrientationAsReference>
      </plugin>
      <pose>0 0 0 0 0 0</pose>
    </sensor>
  </gazebo>
</robot>
